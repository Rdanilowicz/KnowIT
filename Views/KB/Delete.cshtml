@model KnowIT.Models.Article

@{
	ViewData["Title"] = "Delete Article";

	<h2>Are you sure you want to delete this item?</h2>

<div>
		<h4>@Model.Title</h4>
	<hr />
	<d1 class="row">
		<dt class="col-sm-2">Title</dt>
		<dd class="col-sm-10">@Model.Title</dd>

		<dt class="col-sm-2">Content</dt>
		<dd class="col-sm-10">@Model.Content</dd>

		<dt class="col-sm-2">Date Created</dt>
		<dd class="col-sm-10">@Model.DateCreated/ToString(g)</dd>
	</d1>
</div>

<form asp-action="DeleteConfirmed" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
}
